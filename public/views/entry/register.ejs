<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="author" content="Reza Firouzi">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/entry-style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Register</title>
</head>

<body>
    <div id="container-register">
        <div id="title">
            <i class="material-icons lock">text_snippet</i> Register
        </div>
        <form>
            <div class="input">
                <div class="input-addon">
                    <i class="material-icons">person</i>
                </div>
                <input placeholder="First name" type="text" required class="validate">
            </div>
            <div class="clearfix"></div>

            <div class="input">
                <div class="input-addon">
                    <i class="material-icons">person</i>
                </div>
                <input placeholder="Last name" type="text" required class="validate">
            </div>
            <div class="clearfix"></div>

            <div class="input">
                <div class="input-addon">
                    <i class="material-icons">email</i>
                </div>
                <input placeholder="Email" type="email" required class="validate">
            </div>
            <div class="clearfix"></div>

            <div class="input">
                <div class="input-addon">
                    <i class="material-icons">account_circle</i>
                </div>
                <input placeholder="Username" type="text" required class="validate">
            </div>
            <div class="clearfix"></div>

            <div class="input">
                <div class="input-addon">
                    <i class="material-icons">vpn_key</i>
                </div>
                <input placeholder="Password" type="password" required class="validate">
            </div>

            <input class="submit" type="submit" value="Register" />
        </form>
        <div class="register">
            Do you already have an account?
            <a href="login.html"><button id="register-link">Log In</button></a>
        </div>
    </div>
</body>
</html>
